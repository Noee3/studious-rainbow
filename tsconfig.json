{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",                   
    "outDir": "./dist",        
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "es2020",                               
    "module": "node16",                               
    "moduleResolution": "node16",                     
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "skipLibCheck": true                              
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
